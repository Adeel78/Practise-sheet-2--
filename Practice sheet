#Problm 12:-
def verb(s): 
    if s[-1] == 'e': 
        s = s.replace(s[-1],"")  
        print("verb",s+"ing") 
    else: 
        print(s+"ing")
print(verb('play'))
#Problm 13:-
from math import pi 
def area(r,rr): 
    a = pi*(r**2) 
    aa = pi*(rr**2) 
    if a > aa: 
        fa = (aa - a) 
    else: 
        fa = (a - aa) 
        return abs(fa)
print(area(12,34))
#Problm 14:-
def tt(s):
    nu=0
    nl=0 
    u = 'ABCDEFGHIJKLMNOPQRSTUVWXYZ'
    l = 'abcdefghijklmnopqrstuvwxyz' 
    for i in s: 
        if i in u: 
            nu = nu+1
        if i in l: 
            nl = nl+1
        print(nl,nu) 
print(tt("Bilal"))
#Problm 14:-             
def cc(l,b,ll,bb): 
    a = l*b 
    aa = ll*bb 
    if a > aa: 
        fa = (aa - a) 
    else: 
        fa = (a - aa) 
    return abs(fa)
print(cc(5,4,5,10.5))
#Problm 15:-
from fractions import Fraction
i = 1 
f = 88
ff = 0 
for ii in range(i,f): 
    ff = ff + Fraction(1,ii)
print(ff)
#Problm 16:-
s = 'apple' 
ss = "" 
nn = 0 
for i in s: 
    n = s.count(i) 
    if n > 1:
        nn = nn+1
    
print('rep',nn)
#Problm 16:-

def sc(l,r): 
    sa = l*l 
    ca = 3.142*(r**2) 
    print(sa) 
    print(ca) 
    if sa > ca: 
        fa = (ca - sa) 
    else: 
        fa = (sa - ca)
    return abs(fa) 
print(sc(2,5))
          

