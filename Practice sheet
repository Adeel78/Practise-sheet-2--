#Problm 1:-
def area(b,r):
     h=b*r/2 
     return h 
print(area(5,2.5))
#Problm 2:-
def relation(d):
     dict = {'father':'Sharif' , 'brothers':'Nasir,Waris' , 'sister':'Areeba' , 'mother':'Ayesha'}
     a = dict[d] 
     return a
print(relation('brothers'))
#Problm 3:-
import math 
def func(b):
     h=b**2*((math.sqrt(3))/4) 
     return(h)
print(func(5))
#Problm 4:-
def ev(l):
    s=0
    for i in l:
         if i%2==0:
             print(i)
             s=s+i
             print("sum of even no:",s)
         else:
             print("No even found!",)
print(ev([1,2,3,5,16,7,8,10])) 
#Problem 5:-
def re(l):
    y=sorted(l)
    return y
print (re(['55','88','4','2']))
#Problm 6:-
from math import pi
def area_circle(r):
     area=pi*(r**2) 
     a = area+(area*0.05)   
     print("Perimeter",2*pi*r) 
     print("Area of Circle:",a)   
     return""
print(area_circle(13))
#Problm 7:-
def yyy(ch):
     if(ch in 'A' or ch in 'a' or ch in 'E' or ch in 'e' or ch in 'I' or ch in 'i' or ch in 'O' or ch in 'o' or ch in 'U' or ch in 'u'):
          print(ch, "is a Vowel")
     else:
          print(ch, "is a Consonant") 
print(yyy('Nasir')) 
#Problm 8:-
def st(vc):
     countv = 0 
     countc = 0 
     for i in vc:
         if i in "AEIOU" or i in "aeiou":
             countv += 1
         else:
             countc += 1
     print("Numbers of vowels:",countv)
     print("Numbers of consonants:",countc) 
st('Adeel') 
#Problm 9:-
from math import pi 
def rec(l,b):
    area=l*b
    a=area+(area*0.08) 
    print("area of rectangle:",a)   
    print("perimeter:",2*(l+b))
print(rec(5,7))
#Problm 10:-
s = "12345678"
e = 0
o = 0 
el = []
ol = [] 
for i in s:
     if int(i)%2==0:
         e += 1 
         el.append(i) 
     else:
         o += 1 
         ol.append(i)  
print('Numbers of Even :',e) 
print('Numbers of odd:',o)
print("List of even:",el) 
print("List of odd:",ol)
